<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ff4444"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.MainActivity2_record">

    <com.test.test2app.faceview.ZLinearLayout
        android:id="@+id/face_container"
        android:background="#ff0000"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.test.test2app.faceview.BlueFaceView
            android:id="@+id/faceView1"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            app:BlueFaceView_firstName="H"
            app:BlueFaceView_offsetX="6dp"
            app:BlueFaceView_useRoundBreach="true"
            app:BlueFaceView_offsetY="6dp"
            app:BlueFaceView_statusDrawable="@drawable/status_user_online_meeting" />
    </com.test.test2app.faceview.ZLinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</LinearLayout>