<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/country_code_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/china" />

    <TextView
        android:id="@+id/country_code_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:text="China" />

    <com.zhaoyuntao.androidutils.component.ZScaleBar
        android:id="@+id/scalebar2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:ZScaleBar_color="#555500"
        app:ZScaleBar_roundradius="15dp"
        app:ZScaleBar_w_progress="30dp" />
</LinearLayout>